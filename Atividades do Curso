programa {
  
  
  inteiro maioridade = 0
  inteiro numeroGlobal[6]
  
  funcao repetidor(){
    para(inteiro i = 0; i < 6; i++){
      escreva("Digite aqui a sua idade \n")
      leia(numeroGlobal[i])
      se(numeroGlobal[i] > maioridade){
        maioridade = numeroGlobal[i]
      }
    }  
    escreva("A maior idade é " ,maioridade)
  }

    funcao inicio() {

      repetidor()
      
    }
}
