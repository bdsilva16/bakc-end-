apagar tabelas:		
		
drop table(nome da tabela)		
		
		
		
		
create table funcionarios		
(		
id integer not null,		
nome character varying not null,		
cpf character varying(11) not null,		
nascimento date not null, 		
primary key (id)		
);		
		
		
		
